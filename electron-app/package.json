{
  "name": "dangunland-electron",
  "version": "1.0.0",
  "description": "Electron version of DangunLand MUD Client",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
  "dev": "electron .",
  "start": "npm run dev",
  "build": "npm run build:frontend && npm run copy:frontend",
  "build:frontend": "cd ../frontend-react && npx vite build --base=./",
  "copy:frontend": "if not exist .\\dist rmdir /s /q .\\dist && mkdir .\\dist && xcopy /E /I /Y ..\\frontend-react\\dist\\* .\\dist\\",
  "clean": "if exist .\\dist rmdir /s /q .\\dist",
  "rebuild": "npm run clean && npm run build",
  "pack": "electron-builder",
  "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.khunny7.dangunland",
    "productName": "DangunLand MUD Client",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "iconv-lite": "0.6.3"
  }
}