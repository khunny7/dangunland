{
  "name": "dangunland-electron",
  "productName": "DangunLand MUD Client",
  "version": "1.0.0",
  "description": "Desktop MUD client for DangunLand with direct telnet support, Korean encoding, and Windows Store integration",
  "keywords": [
    "mud",
    "client",
    "dangunland",
    "korean",
    "gaming",
    "telnet",
    "euc-kr"
  ],
  "homepage": "https://github.com/khunny7/dangunland",
  "main": "src/main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:3001 && cross-env NODE_ENV=development electron .\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "echo 'Main process is already built'",
    "build:renderer": "vite build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win-store": "electron-builder --win --publish=never -c.win.target=appx",
    "check-store-ready": "node scripts/prepare-store.js",
    "validate-config": "node scripts/validate-config.js"
  },
  "dependencies": {
    "dangunland-shared-ui": "file:../shared-ui",
    "iconv-lite": "^0.6.3",
    "net": "^1.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.khunny7.dangunland",
    "productName": "DangunLand MUD Client",
    "electronVersion": "32.0.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*", 
      "!node_modules/**/*.md",
      "!node_modules/**/.npmignore",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/*.map"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "asar": {
      "smartUnpack": false
    },
    "asarUnpack": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "afterPack": "./scripts/optimize-locales.js",
    "appx": {
      "applicationId": "App",
      "backgroundColor": "#000000",
      "displayName": "Dangun mud client",
      "identityName": "31546YounghoonGim.Dangunmudclient",
      "publisher": "CN=B3D2417D-BB7D-4AA2-ACED-43B59B9475E0",
      "publisherDisplayName": "Piano8283 Studio",
      "languages": [
        "en-US",
        "ko-KR"
      ],
      "setBuildNumber": true,
      "showNameOnTiles": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "author": {
    "name": "khunny7",
    "email": "khunny7@example.com"
  },
  "license": "MIT"
}
